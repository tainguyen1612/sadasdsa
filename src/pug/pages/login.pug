extend ../layouts/layout

block vars
	-title="Login"

block content
	+navigate(loginNagi)
	section.login
		.container.section__contain
			.row
				.col-12.d-flex.justify-content-between.align-items-center
					h1.login__head ĐĂNG NHẬP
					a(href="/register.html").btn.btn-dark.mt-0 ĐĂNG KÝ
				.col-12
					form.login__form
						.mb-4.col-lg-6.col-12
							h2.form__head KHÁCH HÀNG ĐĂNG KÝ
							p Nếu bạn có một tài khoản xin hãy vui lòng đăng nhập.
						.mb-3.col-lg-6.col-12
							label.form-label Địa chỉ email &#42;
							input.form-control(type='email' aria-describedby='emailHelp')
						.mb-3.col-lg-6.col-12
							label.form-label Password &#42;
							input.form-control(type='password')
						.mb-3.col-lg-6.col-12.d-flex.align-items-center
							a(href="#").me-4.ps-0 Quên mật khẩu
							a(href="#").btn.btn-dark.mt-0 ĐĂNG NHẬP